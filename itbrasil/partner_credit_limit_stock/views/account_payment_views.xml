<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Payment terns -->
    <record id="view_payment_term_credit_limit_form" model="ir.ui.view">
      <field name="name">account.payment.term.credit.limit.form</field>
      <field name="model">account.payment.term</field>
      <field name="inherit_id" ref="account.view_payment_term_form" />
