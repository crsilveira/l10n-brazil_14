        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//search[1]/separator[4]" position="after">
                    <filter name="creat_limit_activity" string="Analise de Limite de CrÃ©dito" domain="[['activity_ids.activity_type_id','=',%(partner_credit_limit_stock.mail_activity_data_credit_limit)d]]" />
                </xpath>
            </data>
        </field>
    </record>
</odoo>